<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->

        <item name="colorPrimary">@color/start_orange</item>
        <item name="colorPrimaryDark">@color/end_orange</item>
        <item name="colorAccent">@color/themeColor</item>
    </style>

    <!-- toolbar set contentInsetStart = 0dp (default 16dp)  解决toolbar 开头空隙问题-->
    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <!-- no action bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="toolbarStyle">@style/ClubToolbar</item>
    </style>

    <style name="SlimDialog" parent="AlertDialog.AppCompat">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppDialog.Light" parent="SlimDialog">
        <item name="dialogBackground">@color/whiteBackground</item>
        <item name="titleColor">@color/blackText</item>
        <item name="messageColor">@color/blackText3</item>
        <item name="buttonBackground">@drawable/slim_button_regular_light_background</item>
        <item name="buttonTextColor">@color/slim_button_regular_light_text_color</item>
        <item name="vividButtonBackground">@drawable/slim_button_vivid_light_background</item>
        <item name="vividButtonTextColor">@color/slim_button_vivid_light_text_color</item>
        <item name="dialogBorder">@dimen/dialog_light_border_stroke_width</item>
    </style>

    <style name="smallButtonTextStyle">
        <item name="android:fontFamily">Helvetica Neue LT W1G 45 Light</item>
        <item name="android:textSize">14dp</item>
        <item name="android:spacing">20dp</item>
    </style>

    <style name="DialogButtonText" parent="@style/smallButtonTextStyle">
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
    </style>


    <!--  black title text with orange underline; 12sp -->
    <style name="BlackTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:background">@drawable/underline_title_bg</item>
    </style>

    <!--  vivid title text with vivid underline; left; 16sp -->
    <style name="VividTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:background">@drawable/underline_title_bg</item>
    </style>

    <!-- black text; left; margin ; 12sp  -->
    <style name="TextLeftStyle" parent="TextAppearance.AppCompat">
        <item name="android:gravity">left</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:layout_marginTop">@dimen/margin_text</item>
        <item name="android:layout_marginBottom">@dimen/margin_text</item>
    </style>

    <!--  black text; right; margin ; 12sp -->
    <style name="TextRightStyle" parent="TextAppearance.AppCompat">
        <item name="android:gravity">right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:layout_marginTop">@dimen/margin_text</item>
        <item name="android:layout_marginBottom">@dimen/margin_text</item>
    </style>

    <!--  black text; right; margin ; 12sp -->
    <style name="NormalTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:layout_marginTop">@dimen/margin5_text</item>
        <item name="android:layout_marginBottom">@dimen/margin5_text</item>
    </style>

    <!--  black text; right; margin ; 12sp -->
    <style name="HintTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:gravity">left</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blackText4</item>
    </style>


</resources>
