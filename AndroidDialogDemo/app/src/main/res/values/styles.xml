<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SlimDialog" parent="AlertDialog.AppCompat">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppDialog.Light" parent="SlimDialog">
        <item name="dialogBackground">@color/whiteBackground</item>
        <item name="titleColor">@color/blackText</item>
        <item name="messageColor">@color/blackText3</item>
        <item name="buttonBackground">@color/transparent</item>
        <item name="buttonTextColor">@color/slim_button_regular_light_text_color</item>
        <item name="vividButtonBackground">@drawable/slim_button_vivid_light_background</item>
        <item name="vividButtonTextColor">@color/slim_button_vivid_light_text_color</item>
        <item name="dialogBorder">@dimen/dialog_light_border_stroke_width</item>
    </style>
