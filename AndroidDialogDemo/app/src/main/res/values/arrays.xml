<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Slim Dialog -->
    <declare-styleable name="AppDialogTheme">
        <attr name="AppDialogStyle" format="reference"/>
    </declare-styleable>
    <declare-styleable name="AppDialog">
        <attr name="dialogBackground" format="color"/>
        <attr name="titleColor" format="color"/>
        <attr name="messageColor" format="color"/>
        <attr name="buttonBackground" format="color"/>
        <attr name="buttonTextColor" format="color"/>
        <attr name="vividButtonBackground" format="color"/>
        <attr name="vividButtonTextColor" format="color"/>
        <attr name="dialogBorder" format="dimension"/>
    </declare-styleable>

</resources>